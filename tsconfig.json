{
  "compilerOptions": {
    "target": "ES2022",

    "baseUrl": ".",
    "module": "ES2022",

    "moduleResolution": "Bundler",
    "paths": {
      "#/*": ["./src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "eslint.config.js"]
}